<div class="sign-up-main">
  <div class="sign-up-main__container">
    <h2 class="sign-up-main__container__title">情報変更</h2>
    <div class="sign-up-main__container__forms">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, class: "i-n-team" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-content" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <%= f.label :password, class: "i-n-team" %> <br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-content" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: "i-n-team" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-content" %>
      </div>

      <div class="form-group">
        <%= f.label :current_password, class: "i-n-team" %><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-content" %>
      </div>

      <div class="actions">
        <%= f.submit "更新", class: "form-submit" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
