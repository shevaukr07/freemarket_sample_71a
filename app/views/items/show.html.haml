          %tr
            %th
              配送料の負担
            %td
              = @item.shipping_charge.value
          %tr
            %th
              配送の方法
            %td
              = @item.shipping_method.value
          %tr
            %th
              配送元地域
            %td
              = @item.prefecture.name
          %tr
            %th
              配送日の目安
            %td
              = @item.shipping_day.value
