.inner
  .item-name
    = @item.name
  .top
    .item
      .item__left
        .item__left__mainpic
          = image_tag @item.item_images.first.image.url, alt: "AppStoreで入手", class: "img" ,size: "270x360"
        .item__left__subpic
          - @item.item_images.each do |image|
