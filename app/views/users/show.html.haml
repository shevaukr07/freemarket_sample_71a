- breadcrumb :profile
= render "shared/gretel"
.u-s
  .u-s__inner
    .u-s-side
      .u-s-side__nav
        %ul.u-s-side__nav__lists
          - if user_signed_in? && current_user.id == @user.id
            %li.u-s-side__nav__lists__list
              = link_to bought_item_secound_path(@user), class: "u-s-side-list-link" do
                購入一覧
            %li.u-s-side__nav__lists__list
              = link_to profile_edit_path, class: "u-s-side-list-link" do
                プロフィール編集
            %li.u-s-side__nav__lists__list
              = link_to edit_address_path, class: "u-s-side-list-link" do
                住所変更
            %li.u-s-side__nav__lists__list
              = link_to edit_user_registration_path, class: "u-s-side-list-link" do
                メールアドレス&パスワード
            %li.u-s-side__nav__lists__list
              = link_to destroy_user_session_path,method: :delete, class: "u-s-side-list-link" do
                ログアウト
            %li.u-s-side__nav__lists__list
              = link_to pay_card_index_path,class:"u-s-side-list-link" do
                カード情報編集
    .u-s-main
      .u-s-images
        .u-s-images__contents
          .u-s-images__contents__image
            - if @user.image.present?
              = image_tag @user.image.url, alt: '社長', class: 'profile-image'
            - else
              = image_tag 'moduls/nofoto.jpg', alt: '社長', class: 'profile-image'
          .u-s-images__contents__names
            %p.u-s-images__contents__names__name
              =@user.nickname
      .u-s-texts
        .u-s-texts__contents
          %p.u-s-texts__contents__text
            -# - @user.text.present?
.another
  = link_to '#',class: 'text-decolation-none' do
    .another__title
      = @user.nickname
      %p
        さんの出品一覧
  .items-another
    = render partial: 'shared/item', collection: @items
