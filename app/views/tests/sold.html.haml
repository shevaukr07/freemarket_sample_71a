-# =render partial:'shared/item',locals:{ article:@article }
.form
  - @items.each do |item|
    .item-share
      = link_to item_path(item), class: "" do
        .item-share__image
          = image_tag item.item_images[0].image.url , alt: "商品画像", class: "",size: "187x187"
        .item-share__bottom
          %span.item-share__bottom__title
            =item.name
            -if item.seller_id == current_user.id
              = link_to item_path(item),method: :delete, class: "" do
                %i.fas.fa-trash-alt
            .item-share__bottom__title__hidden-box
        .item-share__price
          ¥#{item.price}
          
        